---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<footer class:list={["footer", className]}>
  <span
    >AWSM DOCS - template for Design System documentation website Â© <a
      href="https://github.com/XOP">XOP</a
    > 2024 - now</span
  >
</footer>

<style>
  .footer {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;

    padding: var(--awsm-space-6) var(--awsm-space-8);

    color: var(--awsm-color-text-muted);
    line-height: var(--awsm-line-height-relaxed);
    background: var(--awsm-color-background-muted);
  }

  @media screen and (max-width: 480px) {
    .footer {
      padding: var(--awsm-space-6) var(--awsm-space-4);
    }
  }

  .footer a {
    color: var(--awsm-color-text-strong);
    text-decoration: none;
  }

  @media (hover: hover) {
    .footer a:hover {
      text-decoration: underline;
    }
  }
</style>
